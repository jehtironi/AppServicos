<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:padding="15dp"
    tools:context=".ui.home.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Busque por profissionais"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="proximos de você"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButtonPedreiro"
            android:layout_width="233dp"
            android:layout_height="123dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/pedreiro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Encontre por tipo de serviço"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonVerServicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="#00FFFFFF"
            android:text="Ver mais >"
            android:textAllCaps="false"
            android:textColor="#B4833A"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButtonl1"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:src="@drawable/l1" />

        <ImageButton
            android:id="@+id/imageButtonl2"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:src="@drawable/l2" />

        <ImageButton
            android:id="@+id/imageButtonl3"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:src="@drawable/l3" />

        <ImageButton
            android:id="@+id/imageButtonl4"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:src="@drawable/l4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Profissionais Recomendados"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonVerProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="#00FFFFFF"
            android:text="Ver mais >"
            android:textAllCaps="false"
            android:textColor="#B4833A"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="445dp"
            android:src="@drawable/home2" />

        <ImageButton
            android:id="@+id/imageButtonSearche"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="445dp"
            android:src="@drawable/searche" />

        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="445dp"
            android:src="@drawable/pessoa" />

        <ImageButton
            android:id="@+id/imageButtonOrc"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="445dp"
            android:src="@drawable/orc" />

        <ImageButton
            android:id="@+id/imageButtonConfig"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="445dp"
            android:src="@drawable/config" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/FrameHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </FrameLayout>

</FrameLayout>