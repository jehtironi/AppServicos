<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".ui.profile.FavoritosFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher_round" />


        <Button
            android:id="@+id/buttonEdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B4833A"
            android:text="Editar Perfil"
            android:textColor="#B5B5B5"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="#00FFFFFF"
            />

        <FrameLayout
            android:id="@+id/frameProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="744dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:background="#00FFFFFF"
            android:text="Serviço Contratado"
            android:textAllCaps="false"
            android:textColor="#B5B5B5"
            android:textSize="13dp" />

        <Button
            android:id="@+id/buttonOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:background="#00FFFFFF"
            android:text="Orçamentos"
            android:textAllCaps="false"
            android:textColor="#B5B5B5"
            android:textSize="13dp" />

        <Button
            android:id="@+id/buttonF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:background="#00FFFFFF"
            android:text="Favoritos"
            android:textAllCaps="false"
            android:textColor="#B4833A"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonHomeP"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="460dp"
            android:src="@drawable/home1" />

        <ImageButton
            android:id="@+id/imageButtonSearcheP"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="460dp"
            android:src="@drawable/searche" />

        <ImageButton
            android:id="@+id/imageButtonProfileP"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="460dp"
            android:src="@drawable/pessoa1" />

        <ImageButton
            android:id="@+id/imageButtonOrcP"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="460dp"
            android:src="@drawable/orc" />

        <ImageButton
            android:id="@+id/imageButtonConfigP"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="460dp"
            android:src="@drawable/config" />

    </LinearLayout>

</FrameLayout>